{
    "name": "Tridorian ZTNA (Go)",
    "dockerComposeFile": [
        "docker-compose.yml"
    ],
    "service": "app",
    "workspaceFolder": "/workspace",
    // Environment variables (keys will be loaded from .env)
    "remoteEnv": {
        "DB_HOST": "postgres",
        "CACHE_HOST": "valkey"
    },
    // Run setup after container is created
    "postCreateCommand": "bash -c 'if [ ! -f .env ]; then make setup; else echo \"âœ… .env exists, skipping setup\"; fi'",
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go",
                "humao.rest-client",
                "dbankier.vscode-quick-select",
                "ms-azuretools.vscode-docker",
                "esbenp.prettier-vscode"
            ]
        }
    },
    "remoteUser": "root"
}